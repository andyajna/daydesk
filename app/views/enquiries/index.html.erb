<div class="container">
  <div class="row">
    <div class="col-md-10">
      <h1>Listing enquiries</h1>

      <table class="table table-hover">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @enquiries.each do |enquiry| %>
            <tr>
              <td><%= enquiry.name %></td>
              <td><%= enquiry.email %></td>
              <td><%= link_to 'Show', enquiry %></td>
              <td><%= link_to 'Edit', edit_enquiry_path(enquiry) %></td>
              <td><%= link_to 'Destroy', enquiry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Enquiry', new_enquiry_path, :class => 'btn btn-success' %>
    </div>
  </div>
</div>