<div class="container">
  <div class="row">
    <div class="col-md-4">

    <%= simple_form_for(@supplier, :html => {:class => 'form-horizontal' }) do |f| %>
    <%= f.error_notification %>

    <div class="form-group">
    <%= f.input :name, input_html: { class: 'form-control'} %>
    </div>

    <div class="form-group">
    <%= f.input :address1, input_html: { class: 'form-control'} %>
    </div>

    <div class="form-group">
    <%= f.input :address2, input_html: { class: 'form-control'} %>
    </div>

    <div class="form-group">
    <%= f.input :suburb, input_html: { class: 'form-control'} %>
    </div>

    <div class="form-group">
    <%= f.input :postcode, input_html: { class: 'form-control'} %>
    </div>

    <div class="form-group">
    <%= f.input :state, input_html: { class: 'form-control'} %>
    </div>

    <div class="form-group">
    <%= f.input :contactname, input_html: { class: 'form-control'} %>
    </div>

    <div class="form-group">
    <%= f.input :contactphone, input_html: { class: 'form-control'} %>
    </div>

    <div class="form-group">
    <%= f.input :contactemail, input_html: { class: 'form-control'} %>
    </div>

    <div class="form-group">
    <%= f.input :paypal, input_html: { class: 'form-control'} %>
    </div>

    <div class="form-group">
    <%= f.input :blurb, input_html: { class: 'form-control'} %>
    </div>

    <div class="form-group">
    <%= f.input :officetype, input_html: { class: 'form-control'} %>
    </div>

    <div class="form-group">
    <%= f.input :wifi %>
    </div>

    <div class="form-group">
    <%= f.input :wifilimit, input_html: { class: 'form-control'} %>
    </div>

    <div class="form-group">
    <%= f.input :printing %>
    </div>

    <div class="form-group">
    <%= f.input :printingdesc, input_html: { class: 'form-control'} %>
    </div>

    <div class="form-group">
    <%= f.input :sendfax %>
    </div>

    <div class="form-group">
    <%= f.input :receivefax %>
    </div>

    <div class="form-group">
    <%= f.input :reception, input_html: { class: 'form-control'} %>
    </div>

    <div class="form-group">
    <%= f.input :coffee %>
    </div>

    <div class="form-group">
    <%= f.input :coffeedesc, input_html: { class: 'form-control'} %>
    </div>

    <div class="form-group">
    <%= f.input :food %>
    </div>

    <div class="form-group">
    <%= f.input :fooddesc, input_html: { class: 'form-control'} %>
    </div>

    <div class="form-group">
    <%= f.input :alcohol, label_html: { class: 'inline'} %>
    </div>

    <div class="form-group">
    <%= f.input :alcoholdesc, input_html: { class: 'form-control'} %>
    </div>

    <div class="form-group">
    <%= f.input :pic1, input_html: { class: 'form-control'} %>
    </div>

    <div class="form-group">
    <%= f.input :pic2, input_html: { class: 'form-control'} %>
    </div>

    <div class="form-group">
    <%= f.input :pic3, input_html: { class: 'form-control'} %>
    </div>
  
    <%= f.button :submit, :class => 'btn btn-warning btn-sm' %>

    <% end %>
    <p>&nbsp;</p>
    </div>
  </div>
</div>
