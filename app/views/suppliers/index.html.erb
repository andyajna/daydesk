<h3>Desks</h3>

<table class="table">
    <% @suppliers.each do |supplier| %>
      <tr>
        <td class="col-md-3">
        <%= image_tag supplier.pic1, :class => 'list-pic' %>  
        </td>
        <td class="col-md-3">
          <strong><%= supplier.name %></strong><br>
          <%= supplier.address1 %><br>
          <% if supplier.address2? %>
          <%= supplier.address2 %><br>
          <% end %>
          <%= supplier.suburb %> <%= supplier.state %> <%= supplier.postcode %><br><br>
          <p><strong>Type:</strong><br>
          <%= supplier.officetype %></p>
          <%= link_to 'Show Detail', supplier, :class => 'btn btn-primary' %>
        </td>
        <td class="col-md-3">
          <%= simple_format h truncate(supplier.blurb, :length => 300) %> [<%= link_to 'More', supplier %>]
        </td>
        <td class="col-md-1"><%= link_to 'Edit', edit_supplier_path(supplier), :class => 'btn btn-warning btn-sm' %></td>
        <td class="col-md-1"><%= link_to 'Destroy', supplier, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger btn-sm' %></td>
        <td class="col-md-1"></td>
      </tr>
    <% end %>
</table>

<br>

